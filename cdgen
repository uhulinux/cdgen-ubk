#!/bin/bash -e

case $1 in
	gnome)
		export DESKTOP=gnome
		;;
	mate)
		export DESKTOP=mate
		;;
	*)
		echo "Ehhez a desktophoz mÃ©g nincs csomaglista!"
		exit0;;
esac

if [ -f packages_cd.txt ]; then
	rm -f packages_cd.txt
fi

cp packages.cd.base.txt packages_cd.txt
cat packages.$DESKTOP.txt >> packages_cd.txt

for i in [0-9][0-9]-*; do
	if [ -x "$i" ]; then
		case "$i" in
		  *~|*.orig|*.rej|*.skip)
			;;
		  *)
			"./$i"
			;;
		esac
	fi
done
