#!/bin/bash -eu

. 00-common

# image size in dd format
case $DESKTOP in
	gnome)
		SIZE="6100M"
		;;
	cinnamon)
		SIZE="6100M"
		;;
	mate)
		SIZE="6200M"
		;;
	xfce)
		SIZE="5600M"
		;;
	kde)
		SIZE="6300M"
		;;
	lxqt)
		SIZE="5600M"
		;;
	lxde)
		SIZE="5600M"
		;;
	rescue)
		SIZE="8400M" # Ez még lehet nagyobb is.
		;;
	*)
		echo "Hibás desktop!"
		exit
		;;
esac

dd if=/dev/zero of="$IMG" bs=1 seek="$SIZE" count=0

losetup "$loopdev" "$IMG"
mkfs.ext4 -text4 -m2 -LUHU "$loopdev"
tune2fs -i0 -c0 -m2 -LUHU "$loopdev"

mkdir -p "$ROOTDIR"
mount "$loopdev" "$ROOTDIR"
mkdir -p "$TMPDIR"
mkdir -p "$ROOTDIR/tmp"
mount --bind "$TMPDIR" "$ROOTDIR/tmp"
